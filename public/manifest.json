{
     "manifest_version": 3,
     "name": "Procrastination Buster",
     "version": "1.0",
     "description": "Monitor and control your procrastination with this Chrome extension.",
     "permissions": [
          "activeTab",
          "storage",
          "tabs",
          "alarms"
     ],
     "background": {
          "service_worker": "background.js",
          "scripts": [
               "siteBlocking.js",
               "procrastinationPrompts.js"
          ]
     },
     "action": {
          "default_popup": "popup.html",
          "default_icon": "icon.png"
     },
     "content_scripts": [
          {
               "matches": [
                    "<all_urls>"
               ],
               "js": [
                    "content.js",
                    "pageTracking.js"
               ]
          }
     ],
     "icons": {
          "16": "icon16.png",
          "48": "icon48.png",
          "128": "icon128.png"
     }
}