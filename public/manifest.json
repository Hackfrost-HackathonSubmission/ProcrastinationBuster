{
  "manifest_version": 2,
  "name": "ProcrastinationBuster",
  "version": "1.0",
  "description": "Control your attention span and focus on your work",
  "permissions": [
    "storage",
    "tabs",
    "webNavigation",
    "*://*/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "externally_connectable": {
    "matches": [
      "*://localhost/*",
      "*://*.vercel.app/*"
    ]
  }
}