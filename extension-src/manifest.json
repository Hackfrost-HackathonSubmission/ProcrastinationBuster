{
     "manifest_version": 3,
     "name": "ProcrastinationBuster",
     "version": "1.0.0",
     "description": "A browser extension which helps you control your attention span and focus on your work",
     "permissions": [
          "storage",
          "alarms",
          "notifications",
          "declarativeNetRequest",
          "management",
          "tabs",
          "activeTab"
     ],
     "host_permissions": [
          "<all_urls>"
     ],
     "declarative_net_request": {
          "rule_resources": [
               {
                    "id": "ruleset_1",
                    "enabled": true,
                    "path": "rules.json"
               }
          ]
     },
     "background": {
          "service_worker": "background.js",
          "type": "module"
     },
     "action": {
          "default_popup": "popup.html",
          "default_icon": {
               "48": "./icon48.png"
          }
     },
     "icons": {
          "48": "./icon48.png"
     },
     "web_accessible_resources": [
          {
               "resources": [
                    "blocked.html"
               ],
               "matches": [
                    "<all_urls>"
               ]
          }
     ]
}